{
  "name": "action-octopus-build-information",
  "private": true,
  "description": "GitHub Action that generates build information for Octopus Deploy",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.js -s",
    "debug": "node -r dotenv/config src/main.js",
    "clean": "shx rm -rf dist/*",
    "lint": "eslint . --cache --fix",
    "test": "jest",
    "prepare": "husky install"
  },
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.7.0",
    "@actions/github": "^5.0.1",
    "lodash": "^4.17.21",
    "node-fetch": "^3.2.10"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.34.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "js-yaml": "^4.1.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.6.2",
    "shx": "^0.3.4"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.js": "eslint --cache --fix",
    "tests/**/*.js": "eslint --cache --fix"
  },
  "prettier": {
    "printWidth": 100
  }
}
