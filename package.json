{
  "name": "action-octopus-build-information",
  "private": true,
  "description": "GitHub Action that generates build information for Octopus Deploy",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run lint && npm run test && npm run clean",
    "build": "ncc build src/main.js -m",
    "debug": "node -r dotenv/config src/main.js",
    "clean": "shx rm -rf dist/*",
    "lint": "eslint . --cache --fix",
    "test": "jest"
  },
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.2.3",
    "@actions/github": "^2.1.1",
    "lodash": "^4.17.19",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.22.1",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "js-yaml": "^3.13.1",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "shx": "^0.3.2"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": "eslint --cache --fix"
  }
}
